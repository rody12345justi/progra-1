#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define max 100

using namespace std;

void cargar (double a[],int tam);
void mostrar (double a[], int tam);
double promedio (double a[], int tam);
void main()
{
	int n;
	double notas[max], prom;
	do{
		cout<<"ingrese el numero de elementos:";
		cin>>n;

	} while ((n<0) || (n>100));
	cargar (notas,n);
	mostrar (notas,n);
	prom = promedio (notas,n);
	cout<<"el promedio es:"<<prom;
	_getch();

}
	void cargar (double a[],int tam){
		for (int i=0;i<tam;i++){
			cout<<"v["<<i<<"]=";
			cin>>a[i];
		}
	} 
	void mostrar (double a[], int tam){
		for (int i=0;i<tam;i++)
			cout<<"v["<<i<<"]="<<a[i]<<endl;
	}
	double promedio (double a[], int tam){
		double n=0;
		for (int i=0;i<tam;i++)
			n = n + a[i];
		return (n/tam);
	}
	void burbuja (double a[], int tam)
	{
		for (int i = 0; i< tam - 1; i++)
			for (int j = i + 1; j < tam; j++)
				if (a[i]> a[j]){
					int tem = a[i];
					a[i] = a[j];
					a[j] = tem;

				}
	}
