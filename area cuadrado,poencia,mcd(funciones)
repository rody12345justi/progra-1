// area cuadrado, potencia,mcd (funciones).cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
using namespace std;
float area_cuadrado (float l);
void potencia (float x, int y, float &z);
int MCD (int a, int b);
void main ()
{
	int opcion,a,b,y,r3;
	float l,x,z,r1,r2;
	
	do {
		cout<<"              \t menu      :"<<endl;
		cout<<"1.- area del cuadrado:"<<endl;
		cout<<"2.-potencia e un numero:"<<endl;
		cout<<"3.- MCD de dos numeros:"<<endl;
		cout<<"0.- salir:"<<endl;
		cout<<"elija una opcion:";
		cin>>opcion;
		switch (opcion){
		case 1: cout<<"ingrese lado:"<<endl;
			    cin>>l;
				r1= area_cuadrado(l);
				cout<<"el area del cuadrado es:"<<r1<<endl;break;
		case 2:cout<<"ingrese un numero:"<<endl;
			   cin>>x;
			   cout<<"ingrese un exponente:"<<endl;
			   cin>>y;
			   potencia(x,y,z);
			   cout<<"el resultado de la potencia es:"<<z<<endl;break;
		case 3:cout<<"ingrese un numero:"<<endl;
			   cin>>a;
			   cout<<"ingrese un segundo numero:"<<endl;
			   cin>>b;
			   r3=MCD(a,b);
			   cout<<"el MCD de los numeros es:"<<r3<<endl;break;
		case 0:cout<<"salir del programa:";break;
		default:cout<<"opcion invalida, digite otra opcion:";break;
		} getch();
	


		}while (opcion!=0);

		getch();
	}
		float area_cuadrado(float l)
		{
			float r1;
			r1=l*l;
			return (r1);
		}
		int MCD (int a, int b)
		{
			if (a>b) swap (a,b);
			return (b==0)?a:MCD(a,a%b);
		}
		void potencia (float x,int y,float &z)
		{
			z=1;
			for (int i=1;i<=y;i++)
				z=z+x;
		}
